<p id="notice"><%= notice %></p>

<h1>Maritime Terms</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Explination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maritime_terms.each do |maritime_term| %>
      <tr>
        <td><%= maritime_term.term %></td>
        <td><%= maritime_term.explination %></td>
        <td><%= link_to 'Show', maritime_term %></td>
        <td><%= link_to 'Edit', edit_maritime_term_path(maritime_term) %></td>
        <td><%= link_to 'Destroy', maritime_term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

